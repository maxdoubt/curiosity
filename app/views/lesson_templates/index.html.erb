<div class='page-header'><h1>Listing Lesson Templates</h1></div>


<p><%= link_to 'New Lesson template', new_lesson_template_path, :class => 'btn btn-default' %></p>


<table class='table table-bordered table-striped'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Rows</th>
      <th>Cols</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @lesson_templates.each do |lesson_template| %>
      <tr>
        <td><%= lesson_template.name %></td>
        <td><%= lesson_template.description %></td>
        <td><%= lesson_template.rows %></td>
        <td><%= lesson_template.cols %></td>
        <td>
	      <div class='btn-group'>
			<%= link_to 'Show', lesson_template, :class => 'btn btn-default btn-xs' %>
			<%= link_to 'Edit', edit_lesson_template_path(lesson_template), :class => 'btn btn-default btn-xs' %>
			<%= link_to 'Destroy', lesson_template, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-default btn-xs' %>
		  </div>
		</td>
      </tr>
    <% end %>
  </tbody>
</table>
