<style>
.field {
	display: inline-block;
}
</style>

<div class='page-header'>
  <h1>Editing Lesson: <%= @lesson.title %></h1>
</div>


<%= form_for(@lesson) do |f| %>
  <% if @lesson.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@lesson.errors.count, "error") %> prohibited this lesson from being saved:</h2>

      <ul>
      <% @lesson.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :lesson_template_id %>
    <%= f.collection_select :lesson_template_id, LessonTemplate.all, :id, :name, {prompt: true}, {:class => 'form-control'} %>
  </div>

  <div class="form-group">
    <%= f.label :begin_date %>
    <%= f.text_field :begin_date, {:class => 'datepicker form-control'} %>
  </div>

  <div class="form-group">
    <%= f.label :end_date %><br>
    <%= f.text_field :end_date, {:class => 'datepicker form-control'} %>
  </div>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, :class => 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit :class => 'btn btn-default'%>
  </div>

<% end %>

<script>
  $(function () {
	$(".datepicker").datepicker();
  });
</script>

<div style='position: relative;'>
  <% @lesson_template = @lesson.lesson_template %>
  <%= render 'lesson_templates/show', :object => @lesson_template %>
</div>

<div style='position: absolute; left: 820px;'>
  <% @standard_domains = StandardDomain.find(:all)%>
  <%= render 'standards/tabbed_index' %>
</div>