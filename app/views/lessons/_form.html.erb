<%= form_for(@lesson) do |f| %>
  <% if @lesson.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@lesson.errors.count, "error") %> prohibited this lesson from being saved:</h2>

      <ul>
      <% @lesson.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group form-group-sm">
    <%= f.label :lesson_template_id %>
    <%= f.collection_select :lesson_template_id, LessonTemplate.all, :id, :name, {prompt: true}, {:class => 'form-control input-sm'} %>
  </div>

  <div class="form-group form-group-sm">
    <%= f.label :begin_date %>
    <%= f.text_field :begin_date, {:class => 'datepicker form-control input-sm'} %>
  </div>

  <div class="form-group form-group-sm">
    <%= f.label :end_date %><br>
    <%= f.text_field :end_date, {:class => 'datepicker form-control input-sm'} %>
  </div>

  <div class="form-group form-group-sm">
    <%= f.label :title %>
    <%= f.text_field :title, :class => 'form-control input-sm' %>
  </div>

  <div class="actions">
    <%= f.submit :class => 'btn btn-default input-sm'%>
  </div>

<% end %>

<script>
  $(function () {
	$(".datepicker").datepicker();
  });
</script>